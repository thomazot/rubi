.price-box
    .regular-price, .special-price, .price-to
        margin-bottom: 0
        padding: 0 5px

        .label
            display: none

        .price
            span
                font-size: 13px
                font-weight: regular
                text-transform: uppercase
                color: color2_bg

    .old-price, .price-from
        margin-bottom: 0
        padding: 0 5px

        .label
            display: none

        .price
            span
                font-size: 13px
                font-weight: regular
                color: #999999

.preco-parcelado-sem-juros, .price-box-avista
