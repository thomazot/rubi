.myaccount
    display: none

    &:after
        display: none
        content: ''
        position: absolute
        top: 45px
        left: 5px
        z-index: 30
        width: 10px
        height: 10px
        background: #fff
        border-top: solid 1px rgba(#464646, 15%)
        border-right: solid 1px rgba(#464646, 15%)
        transform: rotate(-45deg)

    &:hover:after
        display: block

    .recaptcha
        display: none

    .header &
        height: auto
        margin: 0

        &:hover .myaccount__header a
            background: none

    .email-input, .password-input
        height: 30px
        line-height: 30px
        box-shadow: none
        border: solid 1px #f0f0f0
        border-radius: 0
        font-size: 13px

    &__login
        label
            display: block
            font-size: 11px
            font-weight: regular
            text-transform: uppercase
            color: #666

        .form-list .fields
            position: relative
            display: block

        .pass
            position: static

    &__forgot
        top: auto
        bottom: 0
        left: auto
        right: 10px
        font-size: 9px
        font-weight: regular
        color: #999

        &:before
            content: 'esqueci a senha'

        span
            display: none

    &__login-btn
        width: 100%
        height: 40px
        padding: 0
        background: color-call-to-action
        box-shadow: none
        font-size: 12px
        font-weight: bold
        text-transform: uppercase
        color: #fff

        &:hover
            background: darken(color-call-to-action, 20%)

    &__header
        font-size: 13px
        font-weight: regular
        text-transform: uppercase
        color: color1_bg
        line-height: 50px

        a
            line-height: 50px

            &:first-child
                color: color2_bg

    &__content
        box-shadow: 0 10px 20px rgba(#464646, 15%)
        border: solid 1px rgba(#464646, 15%)
        border-radius: 2px

        .title
            font-family: font-two
            font-style: italic
            font-size: 22px
            font-weight: regular
            text-transform: lowercase

    .header &__register
        border-top: solid 1px #ececec
        padding-top: 0
        margin-top: 30px

        &-btn
            height: 40px
            line-height: 40px
            padding: 0
            background: color1_bg
            color: #fff
            font-size: 12px
            font-weight: bold
            text-transform: uppercase
            box-shadow: none

            span
                display: none

            &:before
                content: 'Criar conta'

@media (min-width: 993px)
    .myaccount
        display: block

@media (min-width: 1100px)
    .myaccount
        .drop--right &__content
            left: -20px
            right: auto