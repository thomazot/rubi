.header
    position: static
    padding: 0

    &-container
        background: #fff

@media (min-width: 993px)
    .header
        position: relative
        z-index: 30
        height: 105px
        max-height: 105px
        width: viewport
        max-width: 95%
        justify-content: space-between
        background: #fff
        box-shadow: 800px 0 0 #fff, -800px 0 0 #fff
        transition: all 0.2s ease

        .scrolling &
            max-height: 70px
